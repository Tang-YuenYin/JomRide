<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LL_ridepopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TraslucentGray"
    >

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="427dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="131dp"
        android:layout_marginBottom="125dp"
        android:background="@drawable/popup"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TV_HID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:includeFontPadding="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="12345678"
            android:textAlignment="viewStart"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/TV_HTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:includeFontPadding="true"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="RM 0.00"
            android:textAlignment="viewStart"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/Hline"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/verDarkCyan"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/TV_HtitleDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:includeFontPadding="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Date - Time: "
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV_HDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:includeFontPadding="true"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"
            android:text="date"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TV_Htitletype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:includeFontPadding="true"
            android:paddingTop="2dp"
            android:paddingBottom="10dp"
            android:text="Description:"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV_HDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:includeFontPadding="true"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"
            android:text="description"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TV_HtitleDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:includeFontPadding="true"
            android:paddingTop="2dp"
            android:paddingBottom="10dp"
            android:text="Type:"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV_HType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:includeFontPadding="true"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"
            android:text="type"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <View
            android:id="@+id/Hline2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/verDarkCyan"
            android:paddingTop="10dp" />

        <Button
            android:id="@+id/Btn_HOk"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:fontFamily="@font/inter"
            android:text="@string/popup_exitreceipt"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
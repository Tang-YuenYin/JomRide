    <ImageButton
        android:id="@+id/BtnBack_WalletHome"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="back button"
        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_walletReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/inter"
        android:text="@string/reminder_wallet"
        android:textColor="@color/Red"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LL_Wallet" />

    <LinearLayout
        android:id="@+id/LL_Wallet"
        android:layout_width="351dp"
        android:layout_height="253dp"
        android:background="@drawable/popup"
        android:orientation="vertical"
        android:paddingStart="45dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428">


        <TextView
            android:id="@+id/TV_Wtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:includeFontPadding="true"
            android:paddingTop="10dp"
            android:text="@string/current_balance_wallet"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV_WRM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:fontFamily="@font/inter"
                android:gravity="start"
                android:includeFontPadding="true"
                android:paddingEnd="5dp"
                android:paddingBottom="1dp"
                android:text="@string/rm_topup"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_Winput_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:includeFontPadding="true"
                android:paddingBottom="1dp"
                android:text="0.00"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/TV_Winput_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_wallet_point"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter"
            android:includeFontPadding="true"
            android:paddingStart="50dp"
            android:paddingBottom="20dp"
            android:text="0 pts"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Btn_topup"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="142dp"
            android:layout_height="62dp"
            android:fontFamily="@font/inter"
            android:text="@string/top_up_wallet"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/TV_title_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:drawableLeft="@drawable/ic_wallet"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter"
        android:text="Wallet"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Btn_History"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="234dp"
        android:layout_height="82dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/popup"
        android:fontFamily="@font/inter"
        android:text="@string/walltehistorybuttonlabel"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:icon="@drawable/ic_next"
        app:iconGravity="end"
        app:iconPadding="5dp"
        app:iconSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_walletReminder" />

</androidx.constraintlayout.widget.ConstraintLayout>
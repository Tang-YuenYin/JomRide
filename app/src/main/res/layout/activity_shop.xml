<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#175E5F"
    tools:context=".ShopActivity">

    <ImageView
        android:id="@+id/background11"
        android:layout_width="413dp"
        android:layout_height="728dp"
        android:alpha="0.3"
        android:background="#ffffff"
        android:scaleType="fitCenter"
        android:src="@drawable/backgroundjomride"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="back button"
        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="150dp"
        android:drawableStart="@drawable/shop"
        android:drawablePadding="5dp"
        android:fontFamily="@font/inter"
        android:text="Shop"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/clip"
        android:layout_width="334dp"
        android:layout_height="116dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button2"
        android:contentDescription="clip"
        android:scaleType="fitCenter"
        android:src="@drawable/clip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <ImageButton
        android:id="@+id/armband"
        android:layout_width="334dp"
        android:layout_height="116dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button2"
        android:contentDescription="armband"
        android:scaleType="fitCenter"
        android:src="@drawable/armbandshop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clip" />

    <ImageButton
        android:id="@+id/helmet"
        android:layout_width="334dp"
        android:layout_height="116dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button2"
        android:contentDescription="helmet"
        android:scaleType="fitCenter"
        android:src="@drawable/helmetshop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/armband" />

    <ImageButton
        android:id="@+id/sunglasses"
        android:layout_width="334dp"
        android:layout_height="116dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button2"
        android:contentDescription="sunglasses"
        android:scaleType="fitCenter"
        android:src="@drawable/sunglasses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helmet" />

</androidx.constraintlayout.widget.ConstraintLayout>
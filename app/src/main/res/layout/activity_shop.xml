<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#175E5F"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShopActivity">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="back button"
        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/shop"
        android:layout_width="72dp"
        android:layout_height="90dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="Shop"
        android:textColor="#FFFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/shop"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/clip"
        android:layout_width="334dp"
        android:layout_height="116dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/custom_button2"
        android:contentDescription="clip"
        android:scaleType="fitCenter"
        android:src="@drawable/clip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop" />

    <ImageButton
        android:id="@+id/armband"
        android:layout_width="334dp"
        android:layout_height="116dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button2"
        android:contentDescription="armband"
        android:scaleType="fitCenter"
        android:src="@drawable/armbandshop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clip" />

    <ImageButton
        android:id="@+id/helmet"
        android:layout_width="334dp"
        android:layout_height="116dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button2"
        android:scaleType="fitCenter"
        android:contentDescription="helmet"
        android:src="@drawable/helmetshop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/armband" />

    <ImageButton
        android:id="@+id/sunglasses"
        android:layout_width="334dp"
        android:layout_height="116dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:contentDescription="sunglasses"
        android:background="@drawable/custom_button2"
        android:scaleType="fitCenter"
        android:src="@drawable/sunglasses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helmet" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="300dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    tools:context=".DisabledActivity"
    android:background="@drawable/popupbg">

    <TextView
        android:id="@+id/TVPlease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/inter"
        android:text="Please Key In The Sunglasses Code"
        android:textColor="#000000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/TVAttention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVPlease"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="*The code is showed in vending machine"
        android:textColor="#F90000"
        android:textSize="16sp"
        android:textStyle="" />

    <EditText
        android:id="@+id/ETCode"
        android:layout_width="235dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TVAttention"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter"
        android:hint="Key in your code here" />

    <Button
        android:id="@+id/BtnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button2"
        android:fontFamily="@font/inter"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>